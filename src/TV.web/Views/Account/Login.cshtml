@model TV.web.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<br />
<br />
<br />
<div class="col-lg-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                Log in to your Account
            </div>
        </div>
        <div class="panel-body" style="padding-left: 15px; padding-bottom: 10px; padding-right: 15px;">


            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="row">
                    <div class="col-lg-5">
                        <a class=' btn btn-success'  href='@Url.Action("Register", "Account" )'>Register</a>&nbsp&nbsp&nbsp If you don't have an account
                    </div>
                </div>
                    <br />
                <div class="row">
                    <div class="col-lg-5">
                        <a class=' btn btn-warning' style="font-size:small;" href='@Url.Action("ForgotPassword", "Account" )'>Forgot Password</a> &nbsp&nbsp&nbsp If you forgot your password
                    </div>
                </div>
                    <hr />
                    <br />
                <div class="row">
                    <div class="col-lg-4">
                        @Html.LabelFor(m => m.UserName)&nbsp;
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                    <br />
                <div class="row">
                    <div class="col-lg-4">
                        @Html.LabelFor(m => m.Password)&nbsp;
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                    <br />
                <div class="row">
                    <div class="col-lg-7">
                        @Html.LabelFor(m => m.RememberMe)&nbsp;&nbsp;@Html.CheckBoxFor(m => m.RememberMe)
                        
                    </div>
                </div>
                    <br />
                <div class="row">
                    <div class="col-lg-4">
                        <input class="btn btn-primary" type="submit" value="Log in" />
                    </div>
                </div>

            }

        </div>
    </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
