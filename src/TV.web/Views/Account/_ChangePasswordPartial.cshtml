@using Recaptcha.Web.Mvc;
@model TV.web.ViewModels.ChangePasswordViewModel
<br />
<br />
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
   <div class="col-lg-7">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">
                    Change your password
                </div>
            </div>
            <div class="panel-body" style="padding-left: 15px; padding-bottom: 10px; padding-right: 15px;">
                <div class="row">
                    <div class="col-lg-7">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName)&nbsp @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-7">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)&nbsp @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-7">
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword)&nbsp @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>
                    <br />
                <div class="row">
                    <div class="col-lg-7">
                        @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean);
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-7">
                        <input class="btn btn-primary " type="submit" value="Change password" />&nbsp;&nbsp;<a class="btn btn-danger" href="~/home/index/">Cancel</a>
                    </div>
                </div>
                                   
             </div>
        </div>
   </div>
    
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.Token)
}   
    

