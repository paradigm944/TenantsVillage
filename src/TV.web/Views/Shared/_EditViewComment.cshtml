@model TV.web.ViewModels.CreatePostViewModel


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Comment Details</h4>
        </div>
        <div class="modal-body">
            <div>
                @Html.LabelFor(m => m.ComViewModel.Author)<br />
                @Html.DisplayFor(m => m.ComViewModel.Author)
            </div>
            <div>
                @Html.LabelFor(m => m.ComViewModel.Subject)<br />
                @Html.DisplayFor(m => m.ComViewModel.Subject)
            </div>
            <div>
                @Html.LabelFor(m => m.ComViewModel.Body)<br />
                @Html.DisplayFor(m => m.ComViewModel.Body)
            </div>
            <br />
            @Html.HiddenFor(m => m.Id)
            <div class="modal-footer">
                <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Go Back</button>
            </div>
        </div>
    </div>
</div>
