                        <div class="row">
                            <input class="btn btn-primary" type="submit" value="Submt" />


                            <a class="btn btn-danger" href='~/post/cancelcreate/@Model.Id'>Cancel</a>
                        </div>

                        @Html.HiddenFor(m => m.UserId)
                        @Html.HiddenFor(m => m.Id)
                    </div>

                </form>
                0
            </div>
        </div>


    </div>
