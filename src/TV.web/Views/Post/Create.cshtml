                                                </div>
                                            </div>
                                            <div class="panel-body">
                                                @if (Model.IsEDitMode == true)
                                                {
                                                    <div id="rating">
                                                        <input type="range" value="@Model.Rating" step="0.25" id="backing4">
                                                        <div class="rateit" data-rateit-backingfld="#backing4"
                                                            data-rateit-resetable="false" data-rateit-ispreset="true"
                                                            data-rateit-min="0" data-rateit-max="10">
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {

                                                    <div id="rating">
                                                        <input type="range" value="0" step="0.25" id="backing4">
                                                        <div class="rateit" data-rateit-backingfld="#backing4"
                                                            data-rateit-resetable="false" data-rateit-ispreset="true"
                                                            data-rateit-min="0" data-rateit-max="10">
                                                        </div>
                                                    </div>

                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <br />
                                    <div class="row">
                                        <div class="col-lg-3">
                                            @Html.LabelFor(m => m.BuildingNumber)<br />
                                            @Html.TextBoxFor(m => m.BuildingNumber, new { style = "width:60px;" })
                                            <br />
                                            @Html.ValidationMessageFor(m => m.BuildingNumber)
                                        </div>

                                        <div class="col-lg-4">
                                            @Html.LabelFor(m => m.AptNumber)<br />
                                            @Html.TextBoxFor(m => m.AptNumber, new { style = "width:60px;" })<br />
                                            @Html.ValidationMessageFor(m => m.AptNumber)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-2">
                                            @Html.DropDownListFor(m => m.Street, new SelectList(Model.StreetList), "Please Select...")
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row hidden-lg hidden-md">
                            <div class="col-lg-4">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <div class="panel-title">
                                            Rate your Landlord
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        @if (Model.IsEDitMode == true)
                                        {
                                            <div id="rating">

                                                <div class="rateit" data-rateit-backingfld="#backing4"
                                                    data-rateit-resetable="false" data-rateit-ispreset="true"
                                                    data-rateit-min="0" data-rateit-max="10">
                                                </div>
                                            </div>
                                        }
                                        else
                                        {

                                            <div id="rating">

                                                <div class="rateit" data-rateit-backingfld="#backing4"
                                                    data-rateit-resetable="false" data-rateit-ispreset="true"
                                                    data-rateit-min="0" data-rateit-max="10">
                                                </div>
                                            </div>

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <div class="panel-title">
                                            Financial and Post
                                        </div>
                                    </div>
                                    <div class="panel-body" style="padding-left: 15px; padding-bottom: 10px; padding-right: 15px;">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                @Html.LabelFor(m => m.LeaseYear)<br />
                                                @Html.TextBoxFor(m => m.LeaseYear, new { style = "width:70px" })<br />
                                                @Html.ValidationMessageFor(m => m.LeaseYear)
                                            </div>
                                            <div class="col-lg-3">
                                                @Html.LabelFor(m => m.Rent)<br />
                                                <div class="input-prepend input-append">
                                                    <span class="add-on"><b style="color: green">$</b></span>@Html.TextBoxFor(model => model.Rent, new { style = "width:70px" })<span class="add-on"><b style="color: green">.00</b></span><br />
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Rent)
                                            </div>

                                            <div class="col-lg-3">
                                                @Html.LabelFor(m => m.Deposit)<br />
                                                <div class="input-prepend input-append">
                                                    <span class="add-on"><b style="color: green">$</b></span>@Html.TextBoxFor(model => model.Deposit, new { style = "width:70px" })<span class="add-on"><b style="color: green">.00</b></span><br />

                                                </div>
                                                @Html.ValidationMessageFor(model => model.Deposit)
                                            </div>
                                            <div class="col-lg-3">
                                                @Html.LabelFor(m => m.AmountKept)<br />
                                                <div class="input-prepend input-append">
                                                    <span class="add-on"><b style="color: red">$</b></span>@Html.TextBoxFor(model => model.AmountKept, new { style = "width:70px" })<span class="add-on"><b style="color: red">.00</b></span><br />

                                                </div>
                                                @Html.ValidationMessageFor(model => model.AmountKept)
                                            </div>
                                        </div>
                                        <br />

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <div class="panel-title">
                                            Post
                                        </div>
                                    </div>
                                    <div class="panel-body" style="padding-left: 15px; padding-bottom: 10px; padding-right: 15px;">
                                        <div class="row">
                                            <div class="col-lg-10">
                                                @Html.LabelFor(m => m.Post)
                                                @Html.TextAreaFor(m => m.Post, new { @cols = 150, @rows = 5 })
                                                <br />@Html.ValidationMessageFor(m => m.Post)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="showImages" class="row">
                            <div class="col-lg-10">
                                @if (Model.Images != null && Model.IsEDitMode == true)
                                {
                                    foreach (var x in Model.Images)
                                    {
                                        
                                        
                                    <div class="col-lg-5">

                                        <img src="@x.ImageUrl" style="width:250px;height:120px" />&nbsp&nbsp&nbsp&nbsp

                                                    @Html.ActionLink("Delete Photo", "DeletePhoto", "Post", new { photoId = x.Id }, new { @class = "btn-warning btn sm" })

                                    </div>
                                           
                                       
                                    
                                    }
                                }
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <div class="panel-title">
                                            Upload Pictures<div style="float:right; font-size: 10px">* there is a limit of 4 pictures, delete to add more</div>
                                        </div>
                                    </div>
                                    <div class="panel-body" style="padding-left: 15px; padding-bottom: 11px; padding-right: 15px;">

                                        @*this is a total hack to get around the nested forms problem*@
                                        <form>

                                            <fieldset><legend></legend></fieldset>
                                        </form>
                                        <div class="row">
                                            <iframe id ="picUploadButton" class="col-lg-4" style="height:200px;border:none;overflow:hidden;" src="@Url.Content("~/upload/picupload/")?postId=@Model.Id"></iframe>
                                            <iframe id="picUploadButton" class="col-lg-4" style="height:200px;border:none;overflow:hidden;" src="@Url.Content("~/upload/picupload/")?postId=@Model.Id"></iframe>
                                            <iframe id="picUploadButton" class="col-lg-4" style="height:200px;border:none;overflow:hidden;" src="@Url.Content("~/upload/picupload/")?postId=@Model.Id"></iframe>
                                        </div>
                                        <ul>
                                            @if (Model.Comments != null && Model.IsEDitMode == true)
                                            {
                                                foreach (var x in Model.Comments)
                                                {
                                                <li style="padding-bottom: 10px;">
                                                    @Html.ActionLink(x.Subject, "ViewComment", "Comment", new { threadId = x.Id }, new
                                                {
                                                    @style = "color: white;",
                                                    @data_toggle = "modal",
                                                    @data_target = "#viewCommentModal",
